<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity3">

    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:sv_selectedCircleColor="@color/purple_500"
        app:sv_selectedTextColor="@color/purple_500"
        app:sv_stepLineWidth="1dp"
        app:sv_stepPadding="4dp"
        android:orientation="vertical"
        app:sv_nextTextColor="@color/purple_500"
        app:sv_nextStepLineColor="@color/purple_500"
        app:sv_doneCircleColor="@color/purple_500"
        app:sv_doneStepLineColor="@color/purple_500"
        app:sv_doneCircleRadius="12dp"
        app:sv_selectedCircleRadius="12dp"
        app:sv_selectedStepNumberColor="@color/purple_700"
        app:sv_stepViewStyle="@style/StepView"
        app:sv_doneStepMarkColor="@color/purple_700"
        app:sv_stepNumberTextSize="12sp"
        app:sv_animationType="Line"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- new_user_form_activity.xml -->
    <ernestoyaquello.com.verticalstepperform.VerticalStepperFormView
        android:id="@+id/stepper_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:form_circle_background_color="@color/purple_700"
        app:form_next_button_background_color="@color/purple_700"
        app:form_next_button_pressed_background_color="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/step_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>